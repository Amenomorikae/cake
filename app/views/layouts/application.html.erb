<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <% if end_user_signed_in? %>
           <a href="#">my_page</a>
           <a href="#">cart</a>
        <% elsif admin_signed_in? %>
           <a href="#">受注一覧</a>
           <a href="#">商品登録</a>
           <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        <% else %>
            <%= link_to "sign_up", new_end_user_registration_path %>
            <%= link_to "log_in", new_end_user_session_path %>
        <% end %>
    </header>
    <%= yield %>
  </body>
</html>