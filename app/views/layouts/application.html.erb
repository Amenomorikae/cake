<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg  bg-info">
        <div class="container">
          <a class="navbar-brand" href="#">長野CAKE</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <div class="navbar-nav ml-auto">
                <% if end_user_signed_in? %>
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item ">
                    <a href="#">my_page</a>
                  </li>
                  <li class="nav-item ">
                    <a href="#">cart</a>
                  </li>
                  <li class="nav-item ">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                </ul>
                <% elsif admin_signed_in? %>
                <ul class="navbar-nav">
                  <li class="nav-item ">
                     <%=link_to "商品一覧", admins_items_path %>
                  </li>
                  <li class="nav-item ">
                    <%=link_to "会員一覧", admins_end_users_path %>
                  </li>
                  <li class="nav-item ">
                    <%=link_to "商品登録", new_admins_item_path %>
                  </li>
                  <li class="nav-item ">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                </ul>
                <% else %>
                <ul class="navbar-nav">
                  <li class="nav-item ">
                    <%= link_to "sign_up", new_end_user_registration_path %>
                  </li>
                  <li class="nav-item ">
                    <%= link_to "log_in", new_end_user_session_path %>
                  </li>
                </ul>
                <% end %>
                <form class="form-inline my-2 my-lg-0">
                  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
                </form>
              </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>