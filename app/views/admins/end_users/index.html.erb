<div class="container">
	<h2>会員一覧画面</h2>
	<table class="table">
		<thead class="thead bg-info text-white">
			<tr>
				<th scope="col">会員ID</th>
				<th scope="col">氏名</th>
				<th scope="col">メールアドレス</th>
				<th scope="col">ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @end_users.each do |end_user| %>
				<tr>
					<td><%= end_user.id %></td>
		            <td><%= end_user.name %></td>
		            <td><%= end_user.email %></td>

		            <% if end_user.deleted_at != nil %>
		             <td>退会済</td>
		            <% else %>
		             <td>有効</td>
		            <% end %>
				</tr>
		    <% end %>
		</tbody>
	</table>
</div>

