<div class="container">
 <div class="row">
  <h1>注文一覧画面</h1>
 </div>
 <div class="row">
    <table class="table">
    <thead class="thead bg-info text-white">
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= l order.created_at %></td>
                <td><%= order.end_user.surname %><%= order.end_user.name %></td>
                <td>
                    <% total_amount = 0 %>
                    <% order.order_details.each do |order_detail| %>
                        <% total_amount += order_detail.amount %>
                    <% end %>
                    <%= total_amount %>
                </td>
                <td><%= order.order_status %></td>
            </tr>
        <% end %>
    </tbody>
</table>
 </div>
</div>