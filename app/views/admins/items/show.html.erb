<div class="container">
	<h2>商品詳細</h2>
	<table class="table">
		<thead class="thead bg-info text-white">
			<tr>
				<th scope="col">商品ID</th>
				<th scope="col">商品名</th>
				<th scope="col">税抜価格</th>
				<th scope="col">ジャンル</th>
				<th scope="col">販売ステータス</th>
			</tr>
		</thead>
		<tbody>
				<tr>
					<td><%= @item.id %></td>
					<td><%= @item.name %></td>
					<td><%= @item.price %></td>
		            <td><%= @item.genre_id %></td>
		            <td><%= @item.status %></td>
				</tr>
		</tbody>
	</table>
</div>