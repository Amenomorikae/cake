<div class="container">
	<h4>注文確認情報</h4>
	<table class="table">
		<thead class="thead bg-info text-white">
			<tr>
				<th>商品名</th>
				<th>単価（税込）</th>
				<th>数量</th>
				<th>小計</th>
			</tr>
		</thead>
		<tbody>
			<% current_end_user.cart_items.each do |cart_item| %>
				<tr>
				    <td><%= attachment_image_tag cart_item.item, :image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.price %></td>
                    <td><%= cart_item.amount %></td>
				    <td>¥<%= (cart_item.item.price * cart_item.amount * 1.1).round %></td>
			    </tr>
			<% end %>
		</tbody>
	</table>

	<table>
		<tr>
			<th>送料</th>
			<th>¥<%= @postage %></th>
		</tr>
		<tr>
			<th>商品合計</th>
			<th>¥
			<%= @prices %></th>
		</tr>
		<tr>
			<th>請求金額</th>
			<th>¥<%= @total_price %></th>
		</tr>
	</table>

	<div>
		<%= form_for(@order, url:end_users_orders_path) do |f| %>
			<%= f.hidden_field :order_status, :value => Order.order_statuses.keys[0] %>
			<%= f.hidden_field :total_price, :value => @total_price %>
			<%= f.hidden_field :payment, :value => @order["payment"] %>
			<%= f.hidden_field :postal_code, :value => @order["postal_code"] %>
			<%= f.hidden_field :postage, :value => @postage %>
			<%= f.hidden_field :address, :value => @order["address"] %>
			<%= f.hidden_field :street_address,:value => @order["street_address"] %>
			<%= f.submit "購入を確定する",class: "btn btn-bg btn-info" %>
		<% end %>
	</div>
</div>